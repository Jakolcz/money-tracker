<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="20250705-users_table" author="jakub.kolacek">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar2(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar2(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="users" indexName="users_email_idx" unique="true">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="20250705-roles_table" author="jakub.kolacek">
        <createTable tableName="role">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar2(127)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20250705-users_roles_table" author="jakub.kolacek">
        <createTable tableName="user_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false" references="users(id)" foreignKeyName="fk_user_roles_users"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false" references="role(id)" foreignKeyName="fk_user_roles_role"/>
            </column>
        </createTable>
        <createIndex tableName="user_roles" indexName="user_roles_user_id_idx">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>